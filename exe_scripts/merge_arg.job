#SBATCH --output=logs/wcb_merge_%A.out
#SBATCH --error=logs/wcb_merge_%A.err
#SBATCH --time=10:00:00
#SBATCH -p parallel
#SBATCH --ntasks=1
#SBATCH -A m2_zdvresearch
